pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "my-alpine-web-server"
        REGISTRY = "docker.io"
        REGISTRY_CREDENTIALS = "docker-credentials-id"
        DEPLOY_SERVER = "user@your-server.com"
        DEPLOY_PATH = "/path/to/deployment/directory"
        REPOSITORY = "sibisam2301"
        GIT_URL = "https://github.com/sibilucky/jenkinsdocker.git"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo "Cloning the Git repository..."
                    retry(3) {
                        // Check if GitHub is reachable before cloning
                        sh 'nslookup github.com'
                        // Clone the code from GitHub repository
                        git "${https://github.com/sibilucky/jenkinsdocker.git}"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building the Docker image..."
                    // Build the Docker image using Dockerfile
                    sh "docker build -t my-alpine-web-server ."
                }
            }
        }

        stage('Run Docker Container for Testing') {
            steps {
                script {
                    echo "Running Docker container for testing..."
                    // Run Docker container for testing
                    sh "docker run -d -p 8080:80 --name test-container my-alpine-web-server"
                }
            }
        }

        stage('Push Docker Image to Registry') {
            steps {
                script {
                    echo "Pushing Docker image to registry..."
                    // Log in to Docker registry using Jenkins credentials
                    withCredentials([usernamePassword(credentialsId: "${REGISTRY_CREDENTIALS}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh "docker login -u ${DOCKER_USER} -p ${DOCKER_PASS} ${REGISTRY}"
                    }
                    // Tag and push the Docker image to the specified registry
                    sh "docker tag my-alpine-web-server ${REGISTRY}/${REPOSITORY}/my-alpine-web-server:latest"
                    sh "docker push ${REGISTRY}/${REPOSITORY}/my-alpine-web-server:latest"
                }
            }
        }

        stage('Deploy to Server') {
            steps {
                script {
                    echo "Deploying Docker image to the server..."
                    // Deploy the Docker image to a remote server
                    sshagent(credentials: ['your-ssh-credentials-id']) {
                        sh """
                            ssh -o StrictHostKeyChecking=no ${DEPLOY_SERVER} "
                                docker pull ${REGISTRY}/${REPOSITORY}/my-alpine-web-server:latest &&
                                docker stop my-alpine-web-server || true &&
                                docker rm my-alpine-web-server || true &&
                                docker run -d --name my-alpine-web-server -p 80:80 ${REGISTRY}/${REPOSITORY}/my-alpine-web-server:latest
                            "
                        """
                    }
                    // Check if the deployed container is up and running
                    sh "curl --max-time 30 --fail http://${DEPLOY_SERVER}:80 || exit 1"
                }
            }
        }
    }
    
    post {
        always {
            script {
                echo "Cleaning up Docker resources..."
                // Clean up unused Docker resources to save space
                sh 'docker system prune -f'
            }
        }
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed. Please check the logs for errors."
        }
    }
}
