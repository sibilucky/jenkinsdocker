pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "my-alpine-web-server"
        REGISTRY = "docker.io"
        REGISTRY_CREDENTIALS = "docker-credentials-id"
        DEPLOY_SERVER = "user@your-server.com"
        DEPLOY_PATH = "/path/to/deployment/directory"
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Checking out code from Git repository...'
                checkout([$class: 'GitSCM', 
                          branches: [[name: '*/main']], 
                          userRemoteConfigs: [[url: 'https://github.com/sibilucky/jenkinsdocker.git', credentialsId: 'my-git-credentials']]])
                sh 'ls -la'  // Verify the file structure in the workspace
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    dockerImage = docker.build("${DOCKER_IMAGE}:latest", ".")
                    sh 'docker images'
                    def imageExists = sh(script: "docker images -q ${DOCKER_IMAGE}:latest", returnStatus: true) == 0
                    if (!imageExists) {
                        error "Docker image build failed"
                    }
                }
            }
        }

        stage('Verify Docker Installation') {
            steps {
                script {
                    echo 'Checking Docker version...'
                    sh 'docker --version'
                }
            }
        }

        stage('Run Docker Container for Testing') {
            steps {
                script {
                    echo 'Running Docker container for testing...'
                    sh 'set -x; docker run -d -p 8082:80 ${DOCKER_IMAGE}'
                    def runStatus = sh(script: "docker ps -q -f name=${DOCKER_IMAGE}", returnStatus: true)
                    if (runStatus != 0) {
                        error "Docker container failed to start"
                    }
                }
            }
        }

        stage('Push Docker Image to Registry') {
            steps {
                script {
                    echo 'Pushing Docker image to registry...'
                    withCredentials([usernamePassword(credentialsId: "${REGISTRY_CREDENTIALS}", usernameVariable: 'sibisam2301', passwordVariable: 'CQT6XS0Y46WZ1')]) {
                        echo "Logging into Docker registry ${REGISTRY}..."
                        def loginStatus = sh(script: "echo CQT6XS0Y46WZ1 | docker login -u sibisam2301--password-stdin $REGISTRY", returnStatus: true)
                        if (loginStatus != 0) {
                            error "Docker login failed"
                        }
                        sh '''
                            docker tag ${DOCKER_IMAGE}:latest ${REGISTRY}/sibisam2301/my-alpine-web-server:latest
                            docker push ${REGISTRY}/sibisam2301/my-alpine-web-server:latest
                        '''
                    }
                }
            }
        }

        stage('Deploy to Server') {
            steps {
                script {
                    echo 'Deploying Docker container to the server...'
                    sh """
                        set -x;
                        ssh -o StrictHostKeyChecking=no ${DEPLOY_SERVER} '
                            docker pull ${REGISTRY}/sibisam2301/my-alpine-web-server:latest &&
                            docker stop my-alpine-web-server || true &&
                            docker rm my-alpine-web-server || true &&
                            docker run -d --name my-alpine-web-server -p 8082:80 ${REGISTRY}/sibisam2301/my-alpine-web-server:latest
                        '
                    """
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up Docker images...'
            script {
                try {
                    sh 'docker system prune -f'
                } catch (Exception e) {
                    echo "Docker cleanup failed: ${e.getMessage()}"
                }
            }
        }
    }
}
